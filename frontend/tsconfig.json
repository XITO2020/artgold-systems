{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": ["node", "next"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@comp/*": ["./components/*"],
      "@comp/_partials/*": ["./components/_partials/*"],
      "@lib/*": ["./lib/*"],
      "@ui/*": ["./components/ui/*"],
      "@hooks/*": ["./hooks/*"],
      "@shared/*": ["../shared/*"],
      "@t/*": ["../shared/types/*"],
      "@tfront/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "typeRoots": [
    "./node_modules/@types",
    "./types"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "types/**/*.d.ts",
    "../shared/types/**/*.ts",
    ".next/types/**/*.ts",
    "node_modules/next/types/**/*.ts",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "out"
  ]
}
