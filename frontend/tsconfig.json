{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": ["node"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@comp/*": [
        "./components/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@ui/*": [
        "./components/ui/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@t/*": [
        "../shared/types/*"
      ],
      "@tfront/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "typeRoots": [
    "./node_modules/@types",
    "./types"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    "../shared/types/**/*.ts",
    ".next/types/**/*.ts",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "out"
  ]
}
