{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ESNext"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "src/types/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  