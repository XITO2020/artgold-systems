{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "types": ["node"],
    "paths": {
      "@shared/*": ["./src/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}