{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["esnext"],
      "strict": true,
      "noEmit": false,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@blockchain/*": ["./*"],
        "@shared/*": ["../shared/*"]
      }
    },
    "include": ["**/*.ts", "**/*.tsx", "../shared/**/*.ts"],
    "exclude": ["node_modules", "dist", "build", "out"]
  }
  